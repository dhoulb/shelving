{
	"ts-node": {
		"moduleTypes": {
			"jest.config.ts": "cjs"
		}
	},
	"compilerOptions": {
		"incremental": true,
		"moduleResolution": "node",
		"module": "es2020",
		"lib": ["DOM", "DOM.Iterable", "ES2020"],
		"target": "es2019",
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"jsx": "react-jsx",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "dist",
		// "noImplicitOverride": true, @todo Reenable this when Prettier support for `override` lands.
		"noEmitOnError": true,
		"noErrorTruncation": true,
		"skipLibCheck": true,
		"allowJs": true,
		"checkJs": true,
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"experimentalDecorators": true,
		"isolatedModules": true
	},
	"include": ["./**/*.ts", "./**/*.js"]
}
