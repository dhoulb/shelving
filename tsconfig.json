{
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "commonjs",
		"target": "es2019",
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"jsx": "react-jsx",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"outDir": "dist",
		"noEmitOnError": true,
		"noErrorTruncation": true,
		"skipLibCheck": true,
		"allowJs": true,
		"checkJs": true,
		"declaration": true
	},
	"include": ["./**/*.ts"]
}
