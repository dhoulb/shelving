{
	"name": "shelving",
	"description": "Toolkit for using data in JavaScript.",
	"keywords": [
		"javascript",
		"typescript",
		"schema",
		"validation",
		"database",
		"database-connector",
		"state-management",
		"query-builder"
	],
	"version": "0.0.0-semantic",
	"repository": "https://github.com/dhoulb/shelving",
	"author": "Dave Houlbrooke <dave@shax.com>",
	"license": "0BSD",
	"type": "module",
	"module": "./index.js",
	"main": "./index.js",
	"types": "./index.d.ts",
	"exports": {
		".": "./index.js",
		"./api": "./api/index.js",
		"./db": "./db/index.js",
		"./firestore-client": "./firestore-client/index.js",
		"./firestore-lite": "./firestore-lite/index.js",
		"./firestore-server": "./firestore-server/index.js",
		"./markup": "./markup/index.js",
		"./query": "./query/index.js",
		"./react": "./react/index.js",
		"./schema": "./schema/index.js",
		"./stream": "./stream/index.js",
		"./test": "./test/index.js",
		"./util": "./util/index.js"
	},
	"sideEffects": false,
	"engineStrict": true,
	"engines": {
		"node": ">=14.0.0"
	},
	"scripts": {
		"fix": "npm run fix:prettier && npm run fix:eslint",
		"fix:prettier": "prettier --write './**/*.{md,json}'",
		"fix:eslint": "eslint --cache --fix './**/*.{ts,tsx}'",
		"test": "npm run test:prettier && npm run test:eslint && npm run test:typescript && npm run test:jest",
		"test:prettier": "prettier --check './**/*.{md,json}'",
		"test:eslint": "eslint --cache './**/*.{ts,tsx}'",
		"test:typescript": "tsc --noEmit",
		"test:jest": "npm run build && node --experimental-vm-modules node_modules/jest/bin/jest.js",
		"test:jest:watch": "jest --watchAll",
		"build": "npm run build:typescript && npm run build:copy",
		"build:typescript": "tsc -p ./tsconfig.build.json",
		"build:copy": "cp package.json dist/package.json && cp LICENSE.md dist/LICENSE.md && cp README.md dist/README.md"
	},
	"devDependencies": {
		"@google-cloud/firestore": "^4.15.1",
		"@types/jest": "^27.0.2",
		"@types/react": "^17.0.34",
		"@types/react-dom": "^17.0.11",
		"@typescript-eslint/eslint-plugin": "^5.3.1",
		"@typescript-eslint/parser": "^5.3.1",
		"eslint": "^8.2.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.25.3",
		"eslint-plugin-prettier": "^4.0.0",
		"firebase": "^9.4.1",
		"jest": "^27.3.1",
		"prettier": "^2.3.0",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"typescript": "^4.3.2"
	},
	"peerDependencies": {
		"firebase": ">=9.0.0",
		"@google-cloud/firestore": ">=4.0.0",
		"react": ">=17.0.0"
	}
}
